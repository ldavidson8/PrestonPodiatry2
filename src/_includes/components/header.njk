<nav class="bg-primary border-b-2 border-white border-opacity-90 shadow-lg p-4 relative z-50 text-white" x-data>
  <div class="max-w-screen-xl mx-auto flex justify-between">
    <a class="font-bold text-2xl" href="/">
      Preston Podiatry
    </a>
    {# Desktop Nav #}
    <div class="hidden md:flex items-center gap-16 text-lg">
      {% for item in navigation %}
        <a
          class="{{ 'font-semibold underline' if page.url == item.route }}"
          href="{{ item.route }}"
        >
          {{ item.name }}
        </a>
      {% endfor %}
    </div>
    <button class="md:hidden" @click="$store.nav.toggle()">
      <svg x-show="!$store.nav.isOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
      </svg>
      <svg x-show="$store.nav.isOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
      </svg>
    </button>
  </div>
  {# Mobile Navigation #}
  <nav
    class="container mt-6 flex flex-col text-lg gap-3 md:hidden"
    x-cloak
    x-show="$store.nav.isOpen"
    x-transition:enter="transition ease-out duration-300"
							x-transition:enter-start="opacity-0 transform scale-90"
							x-transition:enter-end="opacity-100 transform scale-100"
							x-transition:leave="transition ease-in duration-300"
							x-transition:leave-start="opacity-100 transform scale-100"
							x-transition:leave-end="opacity-0 transform scale-70">
    {% for item in navigation %}
      <a
        class="{{ 'font-semibold underline bg-green-700' if page.url == item.route }} p-2 rounded-lg"
        href="{{ item.route }}"
      >
        {{ item.name }}
      </a>
    {% endfor %}
  </nav>
</nav>